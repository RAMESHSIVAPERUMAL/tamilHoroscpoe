<UserControl x:Class="TamilHoroscope.Desktop.Controls.PlanetStrengthChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel x:Name="MainPanel" Margin="10">
            <TextBlock Text="Planetary Strength (Shadbala) - ???? ????" 
                       FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
            
            <!-- Bar Chart -->
            <TextBlock Text="Total Strength Bar Chart" 
                       FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
            <StackPanel x:Name="ChartPanel">
                <!-- Planet strength bars will be added dynamically -->
            </StackPanel>
            
            <TextBlock x:Name="SummaryText" Margin="0,15,0,0" 
                       TextWrapping="Wrap" FontSize="11" Foreground="Gray"/>
            
            <!-- Detailed Components Table -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Detailed Strength Components (in Rupas)" 
                               FontWeight="SemiBold" FontSize="14" Margin="10,10,10,10" 
                               Background="#F5F5F5" Padding="5"/>
                    <DataGrid x:Name="dgDetailsTable" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F9F9F9"
                              CanUserResizeRows="False"
                              CanUserSortColumns="True"
                              FontSize="11"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Planet" Binding="{Binding Name}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Positional" Binding="{Binding PositionalStrength, StringFormat={}{0:F1}}" Width="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Directional" Binding="{Binding DirectionalStrength, StringFormat={}{0:F1}}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Motional" Binding="{Binding MotionalStrength, StringFormat={}{0:F1}}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Natural" Binding="{Binding NaturalStrength, StringFormat={}{0:F1}}" Width="65">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Temporal" Binding="{Binding TemporalStrength, StringFormat={}{0:F1}}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Aspectual" Binding="{Binding AspectualStrength, StringFormat={}{0:F1}}" Width="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalStrength, StringFormat={}{0:F1}}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Required" Binding="{Binding RequiredStrength, StringFormat={}{0:F1}}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Grade" Binding="{Binding StrengthGrade}" Width="85">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
