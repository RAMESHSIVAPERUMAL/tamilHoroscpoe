@model TamilHoroscope.Web.ViewComponents.LowBalanceWarningViewModel

@if (Model != null && Model.DaysRemaining > 0)
{
    <div class="alert alert-warning alert-dismissible fade show mb-0" role="alert">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                </div>
                <div class="col">
                    <h5 class="alert-heading mb-1">
                        <i class="bi bi-wallet2"></i> Low Wallet Balance!
                    </h5>
                    <p class="mb-0">
                        You have only <strong>@Model.DaysRemaining day@(Model.DaysRemaining > 1 ? "s" : "")</strong> remaining. 
                        Current balance: <strong>₹@Model.CurrentBalance.ToString("F2")</strong> 
                        (₹@Model.PerDayCost/day)
                    </p>
                </div>
                <div class="col-auto">
                    <a asp-page="/Wallet/TopUp" class="btn btn-warning">
                        <i class="bi bi-cash-coin"></i> Top Up Now
                    </a>
                </div>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (Model != null && Model.DaysRemaining == 0)
{
    <div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <i class="bi bi-x-circle-fill fs-3"></i>
                </div>
                <div class="col">
                    <h5 class="alert-heading mb-1">
                        <i class="bi bi-wallet2"></i> Wallet Balance Exhausted!
                    </h5>
                    <p class="mb-0">
                        Your wallet balance (₹@Model.CurrentBalance.ToString("F2")) is insufficient. 
                        Please top up to continue using the horoscope service.
                    </p>
                </div>
                <div class="col-auto">
                    <a asp-page="/Wallet/TopUp" class="btn btn-danger">
                        <i class="bi btn-cash-coin"></i> Top Up Now
                    </a>
                </div>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
