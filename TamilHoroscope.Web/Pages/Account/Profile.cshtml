@page
@model TamilHoroscope.Web.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h2 class="mb-4">
                <i class="bi bi-person-circle"></i> My Profile
            </h2>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Account Information Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge"></i> Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Full Name:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.CurrentUser?.FullName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CurrentUser?.Email))
                            {
                                <span>@Model.CurrentUser.Email</span>
                                @if (Model.CurrentUser.IsEmailVerified)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="bi bi-check-circle"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning ms-2">
                                        <i class="bi bi-exclamation-circle"></i> Not Verified
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Mobile:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CurrentUser?.MobileNumber))
                            {
                                <span>@Model.CurrentUser.MobileNumber</span>
                                @if (Model.CurrentUser.IsMobileVerified)
                                {
                                    <span class="badge bg-success ms-2">
                                        <i class="bi bi-check-circle"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning ms-2">
                                        <i class="bi bi-exclamation-circle"></i> Not Verified
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Account Created:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.CurrentUser?.CreatedDate.ToLocalTime().ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <strong>Last Login:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (Model.CurrentUser?.LastLoginDate.HasValue == true)
                            {
                                @Model.CurrentUser.LastLoginDate.Value.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">Never</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscription Status Card -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-star"></i> Subscription Status
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.IsInTrial)
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bi bi-gift"></i>
                            <strong>Trial Period Active</strong>
                            <p class="mb-0 mt-2">
                                You are currently in the trial period with limited features.
                                <br />
                                Trial ends: <strong>@Model.CurrentUser?.TrialEndDate.ToLocalTime().ToString("MMMM dd, yyyy")</strong>
                                <br />
                                Days remaining: <strong>@Model.TrialDaysRemaining days</strong>
                            </p>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <h6>Trial Features:</h6>
                                <ul>
                                    <li><i class="bi bi-check-circle text-success"></i> Basic birth details</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Rasi chart</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Dasa details (without Bhukti sub-periods)</li>
                                    <li><i class="bi bi-x-circle text-danger"></i> Navamsa chart (Premium)</li>
                                    <li><i class="bi bi-x-circle text-danger"></i> Planet strength table/chart (Premium)</li>
                                    <li><i class="bi bi-x-circle text-danger"></i> Full Dasa with Bhukti sub-periods (Premium)</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <a asp-page="/Wallet/TopUp" class="btn btn-success">
                                    <i class="bi bi-wallet2"></i> Top Up Wallet to Access Full Features
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mb-3">
                            <i class="bi bi-check-circle-fill"></i>
                            <strong>Full Access Enabled</strong>
                            <p class="mb-0 mt-2">
                                You have access to all premium features!
                            </p>
                        </div>
                    }
                </div>
            </div>

            <!-- Wallet Status Card -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-wallet2"></i> Wallet Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Current Balance:</strong>
                        </div>
                        <div class="col-sm-8">
                            <span class="fs-4 text-success">₹@Model.WalletBalance.ToString("N2")</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Daily Cost:</strong>
                        </div>
                        <div class="col-sm-8">
                            ₹@Model.DailyCost.ToString("N2") per day
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Days Remaining:</strong>
                        </div>
                        <div class="col-sm-8">
                            @if (Model.WalletDaysRemaining > 10)
                            {
                                <span class="badge bg-success">@Model.WalletDaysRemaining days</span>
                            }
                            else if (Model.WalletDaysRemaining > 0)
                            {
                                <span class="badge bg-warning">@Model.WalletDaysRemaining days</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">0 days - Please recharge!</span>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a asp-page="/Wallet/TopUp" class="btn btn-success me-2">
                                <i class="bi bi-plus-circle"></i> Top Up Wallet
                            </a>
                            <a asp-page="/Wallet/History" class="btn btn-outline-secondary">
                                <i class="bi bi-clock-history"></i> Transaction History
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Change Password Card -->
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="bi bi-key"></i> Change Password
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ChangePassword">
                        <div class="mb-3">
                            <label asp-for="ChangePasswordModel.CurrentPassword" class="form-label"></label>
                            <input asp-for="ChangePasswordModel.CurrentPassword" class="form-control" />
                            <span asp-validation-for="ChangePasswordModel.CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ChangePasswordModel.NewPassword" class="form-label"></label>
                            <input asp-for="ChangePasswordModel.NewPassword" class="form-control" />
                            <span asp-validation-for="ChangePasswordModel.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ChangePasswordModel.ConfirmPassword" class="form-label"></label>
                            <input asp-for="ChangePasswordModel.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ChangePasswordModel.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-key"></i> Update Password
                        </button>
                    </form>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-page="/Horoscope/Generate" class="btn btn-primary">
                            <i class="bi bi-stars"></i> Generate Horoscope
                        </a>
                        <a asp-page="/Horoscope/History" class="btn btn-outline-primary">
                            <i class="bi bi-clock-history"></i> Horoscope History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
