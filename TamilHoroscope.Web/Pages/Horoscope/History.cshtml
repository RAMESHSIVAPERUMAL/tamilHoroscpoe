@page
@model TamilHoroscope.Web.Pages.Horoscope.HistoryModel
@{
    ViewData["Title"] = "Horoscope History";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="bi bi-clock-history"></i> Horoscope Generation History
                </h2>
                <a asp-page="/Horoscope/Generate" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Generate New Horoscope
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Generations == null || !Model.Generations.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3">No Horoscopes Generated Yet</h4>
                        <p class="text-muted">
                            You haven't generated any horoscopes yet. Click the button below to generate your first horoscope.
                        </p>
                        <a asp-page="/Horoscope/Generate" class="btn btn-primary">
                            <i class="bi bi-stars"></i> Generate Your First Horoscope
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Total Generations: <span class="badge bg-primary">@Model.TotalCount</span></h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <span class="text-muted">Showing @Model.Generations.Count of @Model.TotalCount</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var generation in Model.Generations)
                    {
                        <div class="col-md-12 mb-3">
                            <div class="card">
                                <div class="card-header @(generation.WasTrialPeriod ? "bg-info text-white" : "bg-success text-white")">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-calendar-event"></i>
                                            <strong>Generated on @generation.GenerationDate.ToLocalTime().ToString("MMMM dd, yyyy")</strong>
                                        </div>
                                        <div>
                                            @if (generation.WasTrialPeriod)
                                            {
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-gift"></i> Trial Period
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-wallet2"></i> Paid (₹@generation.AmountDeducted.ToString("N2"))
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <h6 class="text-muted mb-1">Birth Date & Time</h6>
                                            <p class="mb-0">
                                                <i class="bi bi-calendar3"></i> @generation.BirthDateTime.ToString("MMM dd, yyyy")
                                                <br />
                                                <i class="bi bi-clock"></i> @generation.BirthDateTime.ToString("h:mm tt")
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <h6 class="text-muted mb-1">Birth Location</h6>
                                            <p class="mb-0">
                                                @if (!string.IsNullOrEmpty(generation.PlaceName))
                                                {
                                                    <i class="bi bi-geo-alt"></i> @generation.PlaceName
                                                    <br />
                                                }
                                                <small class="text-muted">
                                                    Lat: @generation.Latitude.ToString("N4")°, 
                                                    Lon: @generation.Longitude.ToString("N4")°
                                                </small>
                                            </p>
                                        </div>
                                        <div class="col-md-3">
                                            <h6 class="text-muted mb-1">Features</h6>
                                            <p class="mb-0">
                                                @if (generation.WasTrialPeriod)
                                                {
                                                    <span class="badge bg-warning text-dark">Limited Features</span>
                                                    <br />
                                                    <small class="text-muted">Basic + Rasi + Dasa</small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Full Features</span>
                                                    <br />
                                                    <small class="text-muted">All Premium Features</small>
                                                }
                                            </p>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <form method="post" asp-page-handler="Regenerate" asp-route-generationId="@generation.GenerationId">
                                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-arrow-clockwise"></i> View Again
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-12">
                                            <small class="text-muted">
                                                <i class="bi bi-clock-history"></i> Created: @generation.CreatedDateTime.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="/Horoscope/History" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>

                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="/Horoscope/History" asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="/Horoscope/History" asp-route-page="@(Model.CurrentPage + 1)">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }

            <!-- Info Card -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle"></i> About Horoscope History</h6>
                    <ul class="mb-0">
                        <li>All your generated horoscopes are saved here for future reference</li>
                        <li>You can view any previous horoscope again at no additional cost</li>
                        <li><strong>Trial Period:</strong> Limited features (Basic, Rasi, Dasa without Bhukti)</li>
                        <li><strong>Paid:</strong> Full features (Navamsa, Planetary Strength, Full Dasa with Bhukti)</li>
                        <li>The first horoscope generated each day costs ₹5 from your wallet (after trial)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
